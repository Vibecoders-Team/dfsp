# Backend API
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info
API_AUTO_MIGRATE=false
ALEMBIC_AUTO_REVISION=false

# Secrets
JWT_SECRET=please_change
RELAYER_PRIVATE_KEY=0x...

# Database (external managed recommended)
POSTGRES_DSN=postgresql+psycopg://user:pass@host:5432/db

# Redis (managed or local)
# If using managed Redis, set REDIS_URL and do not run local redis service
REDIS_URL=redis://host:6379/0
REDIS_MAX_CONNECTIONS=200

# Chain
CHAIN_ID=1
CHAIN_RPC_URL=https://your-mainnet-or-testnet-rpc
CHAIN_PUBLIC_RPC_URL=https://public-https-endpoint
# Optional sender address (if RELAYER_PRIVATE_KEY set, it will be used automatically)
CHAIN_TX_FROM=

# Contracts
REGISTRY_CONTRACT_NAME=FileRegistry
# Mount this JSON into /app/shared/deployment.json or bake into image
CONTRACTS_DEPLOYMENT_JSON=/app/shared/deployment.json

# IPFS (optional for prod if using public gateway only)
IPFS_API_URL=
IPFS_GATEWAY_URL=
IPFS_PUBLIC_GATEWAY_URL=https://ipfs.io

# CORS
# Comma-separated list or "*"
CORS_ORIGINS=https://your-frontend

# Queues
RELAYER_HIGH_QUEUE=relayer.high
RELAYER_DEFAULT_QUEUE=relayer.default

# Quotas & PoW
POW_ENABLED=true
POW_DIFFICULTY_BASE=18
QUOTA_META_TX_PER_DAY=50
QUOTA_DOWNLOAD_BYTES_PER_DAY=2147483648

