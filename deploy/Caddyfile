# Caddy HTTPS reverse proxy for dfsp.app
{
    email admin@dfsp.app
}

(dfsp_common_headers) {
    header {
        # сначала гарантированно убираем любой уже существующий CSP
        -Content-Security-Policy

        Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "no-referrer"
        # X-Frame-Options не нужен, frame-ancestors управляет встраиванием

        # ОБЩИЙ CSP для фронта (prod + dev, mini, Telegram WebApp и TonConnect)
        Content-Security-Policy "
            default-src 'self';
            base-uri 'self';
            object-src 'none';
            frame-ancestors 'self' https://web.telegram.org https://*.telegram.org https://t.me;

            script-src
                'self'
                https://telegram.org
                https://*.telegram.org
                https://js.tlgrm.app;

            style-src
                'self'
                'unsafe-inline';

            style-src-attr
                'unsafe-inline';

            img-src
                'self'
                data:
                blob:
                https://*.walletconnect.com
                https://config.ton.org
                https://t.me
                https://*.telegram.org
                https://js.tlgrm.app
                https://*.tg.dev
                https://raw.githubusercontent.com;

            font-src
                'self'
                data:
                https://*.walletconnect.com;

            connect-src
                'self'
                https://ipfs.dfsp.app
                https://rpc.dfsp.app
                https://ipfs.dev.dfsp.app
                https://rpc.dev.dfsp.app
                https://dfsp.app
                https://dev.dfsp.app
                https://*.walletconnect.com
                wss://*.walletconnect.com
                https://walletbot.me
                https://connect.tonhubapi.com
                https://tonconnectbridge.tonapi.io
                https://config.ton.org
                https://events-gateway.walletteam.org
                https://bridge.tonapi.io
                https://tonconnectbridge.mytonwallet.org
                https://ton-connect-bridge.bgwapi.io
                https://wallet.binance.com
                https://web3.okx.com
                https://www.okx.com
                https://sse-bridge.hot-labs.org;

            worker-src
                'self'
                blob:;

            child-src
                'self'
                blob:;

            frame-src
                'self'
                https://*.walletconnect.com;

            manifest-src 'self';

            form-action 'self';

            upgrade-insecure-requests;
        "
    }
}

(dfsp_explorer_csp) {
    header {
        # тоже сначала чистим CSP, потом ставим свой
        -Content-Security-Policy

        Content-Security-Policy "
            default-src 'self';
            base-uri 'self';
            object-src 'none';
            frame-ancestors 'none';

            script-src
                'self'
                'unsafe-inline'
                https://js.tlgrm.app;

            style-src
                'self'
                'unsafe-inline'
                https://fonts.googleapis.com;

            style-src-attr
                'unsafe-inline';

            img-src
                'self'
                data:
                blob:
                https://*.walletconnect.com
                https://config.ton.org
                https://t.me
                https://*.telegram.org
                https://js.tlgrm.app
                https://*.tg.dev
                https://raw.githubusercontent.com;

            font-src
                'self'
                data:
                https://*.walletconnect.com
                https://fonts.gstatic.com;

            connect-src
                'self'
                https://ipfs.dfsp.app
                https://rpc.dfsp.app
                https://ipfs.dev.dfsp.app
                https://rpc.dev.dfsp.app
                https://dfsp.app
                https://dev.dfsp.app
                https://*.walletconnect.com
                wss://*.walletconnect.com
                https://walletbot.me
                https://connect.tonhubapi.com
                https://tonconnectbridge.tonapi.io
                https://config.ton.org
                https://events-gateway.walletteam.org
                https://bridge.tonapi.io
                https://tonconnectbridge.mytonwallet.org
                https://ton-connect-bridge.bgwapi.io
                https://wallet.binance.com
                https://web3.okx.com
                https://www.okx.com
                https://sse-bridge.hot-labs.org;

            worker-src
                'self'
                blob:;

            child-src
                'self'
                blob:;

            frame-src
                'self'
                https://*.walletconnect.com;

            manifest-src 'self';

            form-action 'self';

            upgrade-insecure-requests;
        "
    }
}

dfsp.app {
    import dfsp_common_headers

    route {
        # API proxy
        handle_path /api/* {
            reverse_proxy api:8000
        }

        # tonconnect manifest
        handle_path /tonconnect-manifest.json {
            header Access-Control-Allow-Origin "*"
            header Access-Control-Allow-Methods "GET, OPTIONS"
            header Access-Control-Allow-Headers "*"
            header Cache-Control "public, max-age=300"
            file_server
        }

        # Telegram bot webhook/health
        handle_path /tg/webhook* {
            reverse_proxy telegram-bot:8080
        }
        handle_path /tg/healthz* {
            reverse_proxy telegram-bot:8080
        }

        # Static SPA
        handle {
            root * /usr/share/caddy/html
            try_files {path} /index.html
            file_server
        }
    }
}

www.dfsp.app {
    redir * https://dfsp.app{uri}
}

rpc.dfsp.app {
    import dfsp_common_headers
    reverse_proxy chain:8545
}

ipfs.dfsp.app {
    import dfsp_common_headers
    reverse_proxy ipfs:8080
}

explorer.dfsp.app {
    import dfsp_common_headers
    import dfsp_explorer_csp

    route {
        handle /api/* {
            reverse_proxy explorer-indexer:4000
        }
        handle /socket/* {
            reverse_proxy explorer-indexer:4000
        }
        handle {
            reverse_proxy explorer-web:3000
        }
    }
}

:80 {
    respond /health "ok" 200
}

registry.dfsp.app {
    reverse_proxy registry:5000
}

# --- Dev stack ---

dev.dfsp.app {
    import dfsp_common_headers

    route {
        handle_path /api/* {
            reverse_proxy dfsp-api-dev:8000
        }
        handle_path /tonconnect-manifest.json {
            header Access-Control-Allow-Origin "*"
            header Access-Control-Allow-Methods "GET, OPTIONS"
            header Access-Control-Allow-Headers "*"
            header Cache-Control "public, max-age=60"
            file_server
        }
        handle {
            root * /usr/share/caddy/html-dev
            try_files {path} /index.html
            file_server
        }
    }
}

www.dev.dfsp.app {
    redir * https://dev.dfsp.app{uri}
}

rpc.dev.dfsp.app {
    import dfsp_common_headers
    reverse_proxy dfsp-anvil-dev:8545
}

ipfs.dev.dfsp.app {
    import dfsp_common_headers
    reverse_proxy dfsp-ipfs-dev:8080
}

explorer.dev.dfsp.app {
    import dfsp_common_headers
    import dfsp_explorer_csp

    route {
        handle /api/* {
            reverse_proxy blockscout-indexer-dev:4000
        }
        handle /socket/* {
            reverse_proxy blockscout-indexer-dev:4000
        }
        handle {
            reverse_proxy blockscout-web-dev:3000
        }
    }
}
